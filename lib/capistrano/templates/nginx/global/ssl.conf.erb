# initial rendering by Cap

ssl on;
ssl_session_timeout 10m;
ssl_stapling on;
ssl_stapling_verify on;
resolver <%= fetch(:nginx_ssl_resolver).to_s %>;
ssl_session_cache builtin:1000 shared:SSL:10m;
ssl_prefer_server_ciphers on;
ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
ssl_ciphers ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:AES256-GCM-SHA384:AES256-SHA256:AES256-SHA:AES128-SHA;
ssl_certificate <%= fetch(:nginx_ssl_cert_path) %>;
ssl_certificate_key <%= fetch(:nginx_ssl_key_path) %>;
